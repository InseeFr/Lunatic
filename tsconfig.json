{
	"compilerOptions": {
		/* 
		* We published in ESM ony because antrl4 is an esm library
		%	https://github.com/antlr/antlr4/blob/master/doc/javascript-target.md#what-about-modules 
		* Take care if you need some assets to add them in dist
		*/
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["DOM", "ESNext"],
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"declaration": true,
		"sourceMap": true,
		"noEmitOnError": true,
		"outDir": "lib",
		"jsx": "react-jsx",
		"verbatimModuleSyntax": true
	},
	"include": ["src", "src/tests/setup.ts"]
}
